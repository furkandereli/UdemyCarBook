@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Sayfası Veri Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal medya hesaplarınıza ait veri girişlerini buradan yapabilirsiniz. Yeni bir sosyal medya ekleyebilir, mevcut sosyal medya hesaplarınızı silebilir ya da düzenleyebilirsiniz. Iconlarla ilgili listeye icon listesi üzerinden ulaşabilirsiniz.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URL</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Sosyal Medya Sayfanızın URL Linkini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Sosyal Medya Icon</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Sosyal Medya Iconu Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Linki Oluştur</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>