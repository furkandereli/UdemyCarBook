@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yazar Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Yazarlarla ilgili işlemlerin gerçekleştirileceği sayfadır. Yazar girişi yaparken bilgileri eksiksiz girmeye özen gösterelim.
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Ad Soyad</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Yazarın Blogları</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th>@count</th>
                                                <td><img src="@item.ImageUrl" width="50" height="50" style="margin-right:15px; border-radius:50%;"/>@item.Name</td>
                                                <td><a href="/Admin/AdminAuthor/RemoveAuthor/@item.AuthorId" class="btn btn-rounded btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorId" class="btn btn-rounded btn-outline-success">Güncelle</a></td>
                                                <td><a href="/Admin/AdminAuthor/#/@item.AuthorId" class="btn btn-rounded btn-outline-dark">Yazarın Blogları</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <p class="mb-0">Henüz hiçbir yazar eklenmemiş!</p>
                                </div>
                            }
                            <a href="/Admin/AdminAuthor/CreateAuthor" class="btn btn-rounded btn-outline-primary">Yeni Yazar Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>