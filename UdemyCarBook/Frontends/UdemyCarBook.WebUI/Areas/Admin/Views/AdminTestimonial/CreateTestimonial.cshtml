@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Referans Veri Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Referans ekleme işleminin yapıldığı sayfadır. Bilgileri eksiksiz olarak doldurup ekle butonuna tıklamanız yeterlidir.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Referansın Adı Soyadı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referans Adı ve Soyadı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referansın Ünvanı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Referansın Ünvanını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referansın Görseli</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Görsel Seçiniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referansın Yorumu</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Yorumunuzu Buraya Yazabilirsiniz"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>