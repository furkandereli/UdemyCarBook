@model CreateFooterAdressDto
@{
    ViewData["Title"] = "CreateFooterAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Adres alanına ait bilgileri aşağıdaki panelden yapabilirsiniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputAdress">Adres</label>
                                <input type="text" class="form-control" id="exampleInputAdress" asp-for="Adress" placeholder="Adres Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon</label>
                                <input type="text" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Telefon Numarası Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Email</label>
                                <input type="text" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="Email Adresi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adres Bilgisi Oluştur</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>